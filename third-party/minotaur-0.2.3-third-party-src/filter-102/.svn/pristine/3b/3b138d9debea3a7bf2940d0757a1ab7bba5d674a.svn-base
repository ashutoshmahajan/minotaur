# For making filter and minlp on Unix systems.

.SUFFIXES: .c .f .o
CC = cc
F77 = /opt/SUNWspro/bin/f77
FFLAGS = -O
CFLAGS = -O -Dbqpd_count__=bqpd_count_ -Dnlp_eps_inf__=nlp_eps_inf_ -Dfilter_count__=filter_count_

## On HP systems, add -ldld to the end of the L = line below.
## On linux and Solaris systems, add -ldl to the end of the L = line below.
L = -ldl

S = ..
# "S = .." assumes this directory is solvers/minlp .
M = src
# The usual assumption is that source, etc., from the solver owner
# appears in the src directory.  Here we just assume that filterlib
# appears in directory $M.

# We assume the f2c calling conventions; see $S/README.f77 for information
# on using other Fortran compilers.  With some, it is necessary to add
# -Dbqpd_count__=bqpd_count_ -Dnlp_eps_inf__=nlp_eps_inf_ -Dfilter_count__=filter_count_
# to the end of the "CFLAGS =" line above.

.c.o:
	$(CC) -c $(CFLAGS) -I$S $*.c

.f.o:
	$(F77) -c $(FFLAGS) $*.f

filter = filter.o cmain.o fopen.o $S/amplsolver.a $M/filterlib.a
minlp = minlp.o cmain.o fopen.o $S/amplsolver.a $M/filterlib.a

both: filter minlp

filter: $(filter)
	$(F77) -o filter $(filter) $L

minlp: $(minlp)
	$(F77) -o minlp $(minlp) $L

filter.o minlp.o: $S/asl.h $S/getstub.h

$S/amplsolver.a:
	cd $S;make amplsolver.a

# make xsum.out to check for transmission errors.
# This assumes you have the xsum program, whose source
# you can get by asking netlib@research.bell-labs.com to
#	send xsum.c from f2c/src

x = filter.c fopen.f minlp.c

xsum.out: $x
	xsum $x >xsum1.out
	cmp xsum0.out xsum1.out && mv xsum1.out xsum.out || diff xsum[01].out
