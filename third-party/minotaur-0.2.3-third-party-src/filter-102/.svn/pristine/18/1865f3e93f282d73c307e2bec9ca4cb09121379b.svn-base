# For making filter and minlp on Unix systems.

# make compilation architecture dependent
ARCH = $(shell uname -m)

# object/binary copde depends on architecture
O = OBJ-$(ARCH)

# AMPL solver interface directory is $S
S = ../$O

# src code is in
M = src/$O

# The usual assumption is that source, etc., from the solver owner
# appears in the src directory.  Here we just assume that minlplib
# appears in directory $M.

all: 
	@echo $S
	cd $S; make 
	cd $M; make 
	cd $O; make

clean:
	@echo $M
	@echo $O
	cd $M; make clean
	cd $O; make clean

reallyclean: clean
	@echo $S
	cd $S; make clean

